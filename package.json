  "main": "index.js",
  "scripts": {
    "start": "npm run server:dev",
    "server:dev": "webpack-dev-server --inline --hot --config build/webpack.dev.js",
    "server:prod": "lite-server --baseDir=\"./dist\"",
    "build:dev": "npm run clear && webpack --config build/webpack.dev.js --progress --display-error-details",
    "build:prod": "npm run clear && NODE_ENV=production webpack --config build/webpack.prod.js --progress --display-error-details",
    "ngrok": "ngrok http",
    "clear": "rimraf dist/",
    "heroku-postbuild": "npm test && npm run build:prod"
  },
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
