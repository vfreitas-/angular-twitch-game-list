    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "plugins": [
            {"name": "@angular/language-service"}
        ],
        "types": [
            "node"
